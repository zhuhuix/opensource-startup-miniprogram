.content {
  padding: 20px;
  font-size: 16px;
}

.footer {
  text-align: right;
}

.round-click{
    height: 120rpx;
    width: 120rpx;
	background-color: green;
    border-radius: 100%;
    position: fixed;
    bottom: 50rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.round-click navigator{
    font-size: 32rpx;
    max-width: 80rpx;
    color: #fff;
    text-align: center;
    
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: left;
}

.userinfo-avatar {
  width: 90rpx !important;
  height: 90rpx !important;
  margin-left: 10rpx!important;
  margin-top: 10rpx !important;
  margin-right: 10rpx !important;
  margin-bottom: 10rpx !important;
  border-radius: 50% !important;
}

.userinfo-nickname {
  font-size: small !important;
  font-weight: bold !important;
  margin: 10rpx !important;
}

.userinfo-score {
  font-size: x-small !important;
  color: #aaa !important;
  margin: 10rpx !important;
}

.userinfo-scan-icon {
  font-size: small !important;
  font-weight: bold !important;
  margin-top: 10rpx !important;
}
.userinfo-scan {
  font-size: x-small !important;
  color: #aaa !important;
}

.top-banner {
  position: relative;
  margin: 0 auto;
  /* width: 630rpx; */
  /* padding: 30rpx; */
  background: #FFF;
	border-radius: 30rpx;
}

.top-swiper {
  height: 300rpx;
  width: 99%;
  background: #fff;
  padding: 10rpx;
  padding-top: 0;
}

.u-img-slide {
  width: 92%;
  height: 92%;
  margin: 2% 4%;
  border-radius: 20rpx;
}

.top-notice {
  position: absolute;
  width: 89%;
  padding: 15rpx 40rpx;
  background: #fff;
}



