	height: 100rpx;
	width: 630rpx;
	background: #FFF;
	margin: 0 auto;
	border-radius: 30rpx;
	margin-top: 15rpx;
	padding: 30rpx;
	position: relative;
	box-shadow: 2rpx 2rpx 20rpx #e0e4f7;
  }
.subject-items {
    display: flex;
    justify-content: space-around;
    margin-top: 30rpx;
     
    }

.my-items {
	display: flex;
	justify-content: space-around;
	margin-top: 5rpx;
   
  }
